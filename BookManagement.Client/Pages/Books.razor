@page "/"
@using System.Net.Http.Json
@using System.Text.Json
@using BookManagement.Common.Responses

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Dostupn칠 knihy</h2>
        <button class="btn btn-outline-primary" @onclick="LoadBooksAsync" disabled="@isLoading">
            @if (isLoading)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                <span>Obnovuji...</span>
            }
            else
            {
                <span>游댃 Obnovit</span>
            }
        </button>
    </div>
    
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Chyba!</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }
    
    <div class="row mb-3">
        <div class="col-md-3">
            <input class="form-control" type="text" placeholder="Vyhledej podle n치zvu..." @bind="searchTitle" @bind:event="oninput" />
        </div>
        <div class="col-md-3">
            <input class="form-control" type="text" placeholder="Vyhledej podle autora..." @bind="searchAuthor" @bind:event="oninput" />
        </div>
        <div class="col-md-3">
            <input class="form-control" type="text" placeholder="Vyhledej podle ISBN..." @bind="searchISBN" @bind:event="oninput" />
        </div>
        <div class="col-md-3">
            <button class="btn btn-secondary w-100" @onclick="ResetSearchAsync">Vymazat filtry</button>
        </div>
    </div>

    @if (filteredBooks == null)
    {
        <p class="text-muted">Na캜칤t치n칤 knih...</p>
    }
    else if (filteredBooks.Count == 0)
    {
        <div class="alert alert-info">콯치dn칠 knihy nebyly nalezeny.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>N치zev</th>
                        <th>Autor</th>
                        <th>ISBN</th>
                        <th>Rok vyd치n칤</th>
                        <th>Dostupn칠 kusy</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in filteredBooks)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.ISBN</td>
                            <td>@book.PublicationYear</td>
                            <td>
                                <span class="badge @(book.AmountAvailable > 0 ? "bg-success" : "bg-danger")">
                                    @book.AmountAvailable
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<BookResponse>? filteredBooks;
    private List<BookResponse>? allBooks;
    private string searchTitle = string.Empty;
    private string searchAuthor = string.Empty;
    private string searchISBN = string.Empty;
    private string? errorMessage;
    private bool isLoading = false;

    [Inject]
    public HttpClient Http { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadBooksAsync();
    }

    private async Task LoadBooksAsync()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            var cts = new CancellationTokenSource(TimeSpan.FromSeconds(30));
            allBooks = await Http.GetFromJsonAsync<List<BookResponse>>("Books", cts.Token) ?? new List<BookResponse>();
            ApplyFilter();
        }
        catch (TaskCanceledException)
        {
            errorMessage = "Vypr코el 캜asov칳 limit. Zkuste to pros칤m znovu.";
            allBooks = new List<BookResponse>();
            filteredBooks = new List<BookResponse>();
        }
        catch (HttpRequestException)
        {
            errorMessage = "Nelze se p콏ipojit k serveru. Ujist캩te se, 쬰 je backend spu코t캩n칳 na http://localhost:5001";
            allBooks = new List<BookResponse>();
            filteredBooks = new List<BookResponse>();
        }
        catch (JsonException)
        {
            errorMessage = "Backend vr치til neplatn치 data. Zkontrolujte, zda je backend spr치vn캩 nainstalovan칳.";
            allBooks = new List<BookResponse>();
            filteredBooks = new List<BookResponse>();
        }
        catch (Exception ex)
        {
            errorMessage = $"Neo캜ek치van치 chyba: {ex.GetType().Name}";
            allBooks = new List<BookResponse>();
            filteredBooks = new List<BookResponse>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilter()
    {
        if (allBooks == null)
            return;

        filteredBooks = allBooks
            .Where(b => string.IsNullOrEmpty(searchTitle) || b.Title.Contains(searchTitle, StringComparison.OrdinalIgnoreCase))
            .Where(b => string.IsNullOrEmpty(searchAuthor) || b.Author.Contains(searchAuthor, StringComparison.OrdinalIgnoreCase))
            .Where(b => string.IsNullOrEmpty(searchISBN) || b.ISBN.Contains(searchISBN, StringComparison.OrdinalIgnoreCase))
            .ToList();
    }

    private async Task ResetSearchAsync()
    {
        searchTitle = string.Empty;
        searchAuthor = string.Empty;
        searchISBN = string.Empty;
        ApplyFilter();
        await Task.CompletedTask;
    }
}
